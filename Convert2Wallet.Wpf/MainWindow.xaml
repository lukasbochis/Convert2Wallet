<Window x:Class="Convert2Wallet.Wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Convert2Wallet.Wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top" Height="90" Margin="0,172,0,0">
            <Button Margin="5" Click="Btn_CreateNewPassbook">Erstellen Sie ein neues Passbook</Button>
            <Button Margin="5" Click="Btn_LoadDataFromFile">Laden Sie eine PDF-Datei hoch</Button>
            <Button Margin="5" Click="Btn_LoadDataFromText">Laden Sie einen Text hoch</Button>
        </StackPanel>
    </Grid>
</Window>
